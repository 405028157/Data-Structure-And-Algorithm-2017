#include<stdio.h>

int main()
{
	int array[10000], start_sub[10000];
	int end_sub, start, ThisSum, MaxSum, n, i, j;

	start = 0;
	ThisSum = 0;
	MaxSum = 0;
	j = 0;
	scanf("%d", &n);
	for (i = 0; i < n; i++)
		scanf("%d", &array[i]);

	for (i = 0; i < n; i++) {
		ThisSum += array[i];
		if (ThisSum > MaxSum) {
			MaxSum = ThisSum;
			end_sub = i;
		}
		else if (ThisSum < 0) {
			ThisSum = 0;
			start_sub[j++] = i + 1;
		}
	}

	if (MaxSum > 0) {
		for (i = 0; i < j; i++)
			if (start_sub[i] < end_sub)
				start = start_sub[i];
		printf("%d %d %d", MaxSum, array[start], array[end_sub]);
	}
	else
		printf("%d %d %d", 0, array[0], array[n]);

	return 0;
}
